<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ListApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="toolbarStyle">@style/CustomMainToolBarStyle</item>
        <item name="statusBarBackground">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:windowBackground">@color/colorPrimaryVariant</item>
        <item name="android:colorBackground">@color/colorPrimaryVariant</item>
        <item name="android:windowEnterTransition">@android:transition/no_transition</item>
        <item name="android:windowExitTransition">@android:transition/no_transition</item>

        <item name="autoCompleteTextViewStyle">@style/CursorStyle</item>
    </style>

    <style name="Theme.ListApp.SplashScreenTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="CursorStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="CustomToolBarStyle" parent="CustomMainToolBarStyle">
        <item name="titleTextAppearance">@style/ToolbarTitleStyle</item>
        <item name="navigationIcon">@drawable/ic_baseline_arrow_back_24</item>

    </style>

    <style name="CustomMainToolBarStyle">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="buttonGravity">center_vertical</item>
        <item name="elevation">80dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">8dp</item>
    </style>


    <style name="CategoryCardView" parent="CardView">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="elevation">8dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="MainActivityHeadingStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="MainActivityCategoryTitle">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundColor">@color/colorPrimaryVariant</item>
        <item name="android:background">@drawable/curved_corners_text_background_shape</item>
        <item name="android:elevation">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">48dp</item>
    </style>

    <style name="MainActivityCategoryCardStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="elevation">8dp</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="MainActivityCategoryImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="DetailsActivityDescriptionBackgroundStyle">
        <item name="android:background">@drawable/item_details_description_background</item>
    </style>

    <style name="DetailsActivityDescriptionCardBackground">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="DetailsActivityItemNameStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DetailsActivityDescriptionHeadingStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DetailsActivityDescriptionTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardItemTextStyle">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CardItemSecondaryTextStyle">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="CardBackgroundStyle">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="RoundedCornerBackgroundDefault">
        <item name="android:background">@drawable/rounded_corners_background</item>
        <item name="elevation">8dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="BottomNavigationViewStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemIconTint">@color/bottom_navigation_view_color</item>
        <item name="itemTextColor">@color/bottom_navigation_view_color</item>
    </style>

    <style name="BackgroundStyle">
        <item name="android:background">@color/backgroundColor</item>
    </style>

    <style name="DetailsBackgroundStyle" parent="BackgroundStyle">
        <item name="android:background">@color/white</item>
    </style>
</resources>