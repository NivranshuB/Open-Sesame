<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/most_viewed_title"
            style="@style/MainActivityHeadingStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Viewed" />


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/panelRecyclerView"
            android:orientation="horizontal"></androidx.recyclerview.widget.RecyclerView>


        <TextView
            style="@style/MainActivityHeadingStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="Categories" />

        <RelativeLayout
            android:id="@+id/relative_layout_wooden"
            style="@style/CategoryCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/wooden_text"
                style="@style/MainActivityCategoryTitle"

                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:text="Wooden" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:elevation="8dp"
                app:cardCornerRadius="4dp">

                <ImageView
                    android:id="@+id/wooden_image_background"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/door8" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            style="@style/CategoryCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="4dp">

                <ImageView
                    android:id="@+id/metal_image_background"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/door9" />
            </androidx.cardview.widget.CardView>

            <TextView
                style="@style/MainActivityCategoryTitle"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:text="Metal" />


        </RelativeLayout>

        <RelativeLayout
            style="@style/CategoryCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="4dp">

                <ImageView
                    android:id="@+id/glass_image_background"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/door5" />
            </androidx.cardview.widget.CardView>

            <TextView
                style="@style/MainActivityCategoryTitle"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:text="Glass" />


        </RelativeLayout>

        <RelativeLayout
            style="@style/CategoryCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"

                app:cardCornerRadius="4dp">

                <ImageView
                    android:id="@+id/artistic_image_background"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/door7" />
            </androidx.cardview.widget.CardView>

            <TextView
                style="@style/MainActivityCategoryTitle"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:text="Artistic" />


        </RelativeLayout>

    </LinearLayout>


</ScrollView>