<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_card"
        android:layout_width="170dp"
        android:layout_height="230dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#f2f2f2"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">


        <View
            android:id="@+id/materialEdgeTop"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@drawable/wood_edge"
            android:rotation="0"
            android:translationZ="90dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/panelImage"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/door1"></ImageView>



            <TextView
                android:id="@+id/panelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/panelImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Door"
                android:textAlignment="center"
                android:textSize="15dp"></TextView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/panelPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_card"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginTop="5dp"
        android:text="$100.00"
        android:padding="4dp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_price_tag"
        android:textSize="15dp"></TextView>

</RelativeLayout>

