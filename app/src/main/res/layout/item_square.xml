<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clipToPadding="false"
    android:padding="8dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <View
            android:id="@+id/materialEdgeTop"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="top|right|end"
            android:background="@drawable/wood_edge"
            android:rotation="0"
            android:translationZ="90dp" />

        <View
            android:id="@+id/materialEdgeBottom"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|right|end"
            android:background="@drawable/wood_edge"
            android:rotation="90" />

        <TextView
            android:id="@+id/materialName"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/panelBar"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top|right|end"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:alpha="1"
            android:rotation="45"
            android:text="Oak"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:translationZ="100dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <ImageView
                android:id="@+id/panelImage"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/door1"></ImageView>

            <View
                android:id="@+id/panelBar"
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:layout_below="@+id/panelImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:background="@drawable/gold_gradient" />

            <TextView
                android:id="@+id/panelName"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_below="@+id/panelBar"
                android:layout_centerHorizontal="true"
                android:text="Door"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/panelPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/panelName"
                android:layout_centerHorizontal="true"
                android:text="$100.00"></TextView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>

